<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="lib/angular/angular.min.js"></script>
    <script src="lib/angular-route/angular-route.min.js"></script>
    <script src="lib/angular-animate/angular-animate.min.js"></script>
    <script src="javascripts/app.js"></script>
    <script src="javascripts/controllers.js"></script>
    <script src="javascripts/services.js"></script>
    <script src="javascripts/routes.js"></script>
    <script src="javascripts/directives.js"></script>
    <script src="javascripts/filters.js"></script>
    <script src="javascripts/animations.js"></script>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  </head>
  <body>
    <a href="#/about">About</a>
    <a href="#/home">Home</a>
    <a href="#/other">Other</a>
    <a href="#/todo">ToDo</a>
    <div ng-controller="QuoteCtrl">
    <input type="text" class="" placeholder="Quote" ng-model="quote.text">
    <input type="text" class="" placeholder="Author" ng-model="author.text">
    <input type="text" class="" placeholder="Name" ng-model="name.text">
    <button type="submit" class="" ng-click="createQuote()">Add Quote</button>
    <div ng-repeat="quote in quotes">
      <label>
        Delete <input type="checkbox" ng-click="deleteQuote(quote._id)">
        <q>{{quote.quote + ', ' + quote.author + ', ' + quote.name}}</q>
      </label>
    </div>
    
    
    </div>
    <div ng-controller="BearCtrl">
        <button type="submit" class="" ng-click="createBear()">Add Bear</button>
        <button type="submit" class="" ng-click="updateBear(bear._id)">Update Bear</button>
        <input type="text" placeholder="Fuzzy the Bear" ng-model="bearName.text">
        <span>Current Bear: {{bear.name}}</span>
        <div ng-repeat="bear in bears">
          <label>
            Delete <input type="checkbox" ng-click="deleteBear(bear._id)">
        </label>
            <q ng-click="viewBear(bear._id)">{{bear.name}}</q>
          
        </div>
    </div>
    <div ng-view></div>
  </body>
</html>
